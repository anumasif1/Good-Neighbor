{{!-- Post Display --}}
<div class="card-body">
    <div class="container" style="padding: 20px;">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                {{member_name}}
            </div>
        </nav>

        <!-- postview under name -->
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-post" role="tabpanel" aria-labelledby="nav-post-tab">
                {{member_post}} </div>

            <div class="mt-3">
                <form class="form-inline">
                    <div class="form-group">
                        <div class="form-group col-md-10 pl-0 pr-0">
                            <label for="exampleFormControlTextarea1"></label>
                            <textarea class="form-control w-100" id="exampleFormControlTextarea1" rows="1"
                                placeholder="Leave a Comment"></textarea>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-success btn-square" id="submit-comment">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        {{!-- ------------------ --}}
        {{!-- Comments Display --}}
        <div class="container pl-0 pr-0">
            <button type="button" class="btn btn-light mt-3 active btn-block" data-toggle="collapse"
                data-target="#demo">
                <div class="glyphicon glyphicon-collapse-down"></div> Comments
            </button>
            {{#each member_comment}}
            {{>posts/comment}}
            {{/each}}


        </div>

        {{!-- --------------------------------- --}}

        {{!-- ending divs --}}
    </div>
</div>